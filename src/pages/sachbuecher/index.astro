---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const books = await getCollection('sachbuecher');
const sortedBooks = books.sort((a, b) => (a.data.order || 99) - (b.data.order || 99));
---

<BaseLayout 
  title="Sachbücher & Forschung" 
  description="Wissenschaftliche und philosophische Publikationen von Thomas Peter Küper.">

  <style is:inline>
    .archive-container {
      max-width: 1050px;
      margin: 0 auto;
      padding: 8rem 2rem;
    }

    .archive-header {
      text-align: center;
      margin-bottom: 10rem;
    }

    .archive-header h1 {
      font-family: 'Crimson Text', serif;
      font-size: clamp(3rem, 8vw, 4.5rem);
      font-weight: 300;
      text-transform: uppercase;
      letter-spacing: 0.1em;
      margin-bottom: 1.5rem;
      line-height: 1.1;
    }

    .archive-header p {
      font-family: 'Lora', serif;
      font-style: italic;
      color: #c9a961;
      font-size: 1.25rem;
    }

    .book-list {
      display: flex;
      flex-direction: column;
      gap: 10rem;
    }

    .book-entry {
      display: grid;
      grid-template-columns: 280px 1fr;
      gap: 5rem;
      align-items: start;
    }

    .cover-box img {
      width: 100%;
      height: auto;
      box-shadow: 0 20px 50px rgba(0,0,0,0.12);
      border: 1px solid #eee;
      border-radius: 2px;
      transition: transform 0.5s ease;
    }

    .book-entry:hover .cover-box img {
      transform: translateY(-10px);
    }

    .content-box h2 {
      font-family: 'Crimson Text', serif;
      font-size: 2.8rem;
      font-weight: 300;
      margin: 0 0 0.8rem;
      line-height: 1.1;
    }

    .genre-label {
      font-family: 'Lato', sans-serif;
      font-size: 0.75rem;
      text-transform: uppercase;
      letter-spacing: 3px;
      color: #c9a961;
      font-weight: 700;
      display: block;
      margin-bottom: 2rem;
    }

    .description-text {
      font-family: 'Lora', serif;
      font-size: 1.1rem;
      line-height: 1.9;
      color: #444;
      margin-bottom: 2.5rem;
      max-width: 650px;
    }

    .details-link {
      font-family: 'Lato', sans-serif;
      font-size: 0.8rem;
      font-weight: 700;
      text-transform: uppercase;
      letter-spacing: 2px;
      color: #1a1a1a;
      text-decoration: none;
      border-bottom: 1px solid #c9a961;
      padding-bottom: 5px;
      transition: opacity 0.3s;
    }

    .details-link:hover { opacity: 0.7; }

    @media (max-width: 850px) {
      .book-entry { grid-template-columns: 1fr; text-align: center; gap: 3rem; }
      .cover-box { max-width: 240px; margin: 0 auto; }
      .description-text { margin-left: auto; margin-right: auto; }
      .archive-header { margin-bottom: 6rem; }
    }
  </style>

  <div class="archive-container">
    <header class="archive-header">
      <h1>Sachbücher & Forschung</h1>
      <p>Chronobiologie, Systemtheorie und die Physik des Ich</p>
    </header>

    <div class="book-list">
      {sortedBooks.map((book) => (
        <article class="book-entry">
          <div class="cover-box">
            {book.data.cover ? (
              <img src={book.data.cover} alt={book.data.title} />
            ) : (
              <div style="aspect-ratio:2/3; background:#faf9f6; border:1px solid #eee;"></div>
            )}
          </div>
          <div class="content-box">
            <span class="genre-label">{book.data.genre}</span>
            <h2>{book.data.title}</h2>
            <p class="description-text">{book.data.description}</p>
            <a href={`/sachbuecher/${book.slug}/`} class="details-link">Zum Forschungsprojekt →</a>
          </div>
        </article>
      ))}
    </div>
  </div>
</BaseLayout>
