---
// Pfad: src/pages/index.astro
import BaseLayout from '../layouts/BaseLayout.astro';
import authorImg from '../assets/portrait-hero.jpg';
---

<BaseLayout title="Home" description="Thomas Peter Küper — Autor, Weltenbauer und Philosoph.">
  <style>
    .home-hero { padding: 8rem 0 6rem; background-color: var(--bg-soft); border-bottom: 1px solid var(--border); }
    .hero-grid { display: grid; grid-template-columns: 400px 1fr; gap: 6rem; align-items: center; }
    .portrait-img { width: 100%; border-radius: 2px; box-shadow: 0 30px 60px rgba(0,0,0,0.1); border: 1px solid var(--border); }
    .hero-text h1 { font-family: 'Cormorant Garamond', serif; font-size: clamp(3rem, 6vw, 4.5rem); font-weight: 300; line-height: 1; margin-bottom: 1.5rem; }
    .lead-text { font-family: 'Libre Baskerville', serif; font-size: 1.25rem; color: var(--gold); font-style: italic; margin-bottom: 2rem; display: block; }
    .btn-primary { display: inline-block; text-decoration: none; background-color: var(--text); color: #fff; padding: 1.2rem 3rem; font-size: 0.75rem; font-weight: 700; text-transform: uppercase; letter-spacing: 0.2em; transition: 0.3s; }
    .btn-primary:hover { background-color: var(--gold); transform: translateY(-3px); }
    
    .universe-cards { display: grid; grid-template-columns: 1fr 1fr; gap: 3rem; margin-top: 4rem; }
    .uni-card { background: #fff; border: 1px solid var(--border); padding: 4rem; text-decoration: none; color: inherit; text-align: center; transition: 0.4s; }
    .uni-card:hover { border-color: var(--gold); transform: translateY(-10px); }
    
    @media (max-width: 950px) { .hero-grid { grid-template-columns: 1fr; text-align: center; } }
  </style>

  <section class="home-hero">
    <div class="container hero-grid">
      <div class="portrait-box">
        <img src={authorImg.src} alt="Thomas Peter Küper" class="portrait-img" />
      </div>
      <div class="hero-text">
        <span class="lead-text">Thomas Peter Küper</span>
        <h1>Schreiber & Weltenbauer</h1>
        <p>Ich schaue genau hin – auf das, was zwischen den Zeilen passiert. Meine Geschichten entstehen dort, wo die Dinge aneinanderstoßen.</p>
        <a href="/romane" class="btn-primary">Bibliothek betreten</a>
      </div>
    </div>
  </section>

  <section style="padding: 10rem 0;">
    <div class="container">
      <h2 style="text-align:center; font-family:'Cormorant Garamond',serif; font-size:3rem; font-weight:300; margin-bottom: 4rem;">Die Universen</h2>
      <div class="universe-cards">
        <a href="/universen/baumeister" class="uni-card">
          <h3>Baumeister</h3>
          <p>60.000 Jahre. Ein Gefüge. Die Architektur des Seins.</p>
        </a>
        <a href="/universen/nox" class="uni-card">
          <h3>noχ¹ᐃ</h3>
          <p>Der Mars, das χ-Feld und die Grenzen der Identität.</p>
        </a>
      </div>
    </div>
  </section>
</BaseLayout>
