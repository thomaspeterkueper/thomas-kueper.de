---
// Dateipfad: src/pages/romane/standalone.astro
// Beschreibung: Automatisiertes Archiv für Standalone-Romane. 
// Design: Synchronisiert mit dem Sachbuch-Archiv.

import BaseLayout from '../../layouts/BaseLayout.astro';

// Scannt alle index.astro in den Unterordnern von romane/
const novels = await Astro.glob('./*/index.astro');

// Filtert nur Standalone-Werke (die kein 'universe' im Frontmatter haben)
const standaloneNovels = novels
  .filter(novel => !novel.frontmatter.universe)
  .sort((a, b) => (a.frontmatter.order || 99) - (b.frontmatter.order || 99));
---

<BaseLayout 
  title="Standalone Romane" 
  description="Einzeltitel, psychologische Thriller und literarische Erzählungen von Thomas Peter Küper.">

  <style is:inline>
    .archive-container {
      max-width: 1050px;
      margin: 0 auto;
      padding: 8rem 2rem;
    }

    .archive-header {
      text-align: center;
      margin-bottom: 10rem;
    }

    .archive-header h1 {
      font-family: 'Cormorant Garamond', serif;
      font-size: clamp(3rem, 8vw, 4.5rem);
      font-weight: 300;
      text-transform: uppercase;
      letter-spacing: 0.1em;
      margin-bottom: 1.5rem;
    }

    .archive-header p {
      font-family: 'Libre Baskerville', serif;
      font-style: italic;
      color: #c9a961;
      font-size: 1.25rem;
    }

    .book-list {
      display: flex;
      flex-direction: column;
      gap: 10rem; /* Großer Abstand für Monumentalität */
    }

    .book-entry {
      display: grid;
      grid-template-columns: 280px 1fr; /* Einheitliche Cover-Breite */
      gap: 5rem;
      align-items: start;
    }

    .cover-box img {
      width: 100%;
      height: auto;
      box-shadow: 0 20px 50px rgba(0,0,0,0.12);
      border: 1px solid #eee;
      border-radius: 2px;
      transition: transform 0.5s ease;
    }

    .book-entry:hover .cover-box img {
      transform: translateY(-10px);
    }

    .content-box h2 {
      font-family: 'Cormorant Garamond', serif;
      font-size: 2.8rem; /* Einheitliche Titelgröße */
      font-weight: 300;
      margin: 0 0 0.8rem;
      line-height: 1.1;
    }

    .genre-label {
      font-family: 'Noto Sans', sans-serif;
      font-size: 0.75rem;
      text-transform: uppercase;
      letter-spacing: 3px;
      color: #c9a961;
      font-weight: 700;
      display: block;
      margin-bottom: 2rem;
    }

    .description-text {
      font-family: 'Libre Baskerville', serif;
      font-size: 1.1rem; /* Einheitliche Textgröße */
      line-height: 1.9;
      color: #444;
      margin-bottom: 2.5rem;
      max-width: 650px;
    }

    .details-link {
      font-family: 'Noto Sans', sans-serif;
      font-size: 0.8rem;
      font-weight: 700;
      text-transform: uppercase;
      letter-spacing: 2px;
      color: #1a1a1a;
      text-decoration: none;
      border-bottom: 1px solid #c9a961;
      padding-bottom: 5px;
      transition: opacity 0.3s;
    }

    .details-link:hover { opacity: 0.7; }

    @media (max-width: 850px) {
      .book-entry { grid-template-columns: 1fr; text-align: center; gap: 3rem; }
      .cover-box { max-width: 240px; margin: 0 auto; }
      .description-text { margin-left: auto; margin-right: auto; }
      .archive-header { margin-bottom: 6rem; }
    }
  </style>

  <div class="archive-container">
    <header class="archive-header">
      <h1>Standalone Romane</h1>
      <p>Literarische Einzeltitel und psychologische Studien</p>
    </header>

    <div class="book-list">
      {standaloneNovels.map((novel) => (
        <article class="book-entry">
          <div class="cover-box">
             {novel.frontmatter.cover ? (
               <img src={novel.frontmatter.cover} alt={novel.frontmatter.title} />
             ) : (
               <div style="aspect-ratio:2/3; background:#faf9f6; border:1px solid #eee;"></div>
             )}
          </div>
          <div class="content-box">
            <span class="genre-label">{novel.frontmatter.genre}</span>
            <h2>{novel.frontmatter.title}</h2>
            <p class="description-text">{novel.frontmatter.description}</p>
            <a href={novel.url} class="details-link">Zum Romanprojekt →</a>
          </div>
        </article>
      ))}
    </div>
  </div>
</BaseLayout>