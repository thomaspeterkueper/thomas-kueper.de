---
// Dateipfad: src/layouts/BaseLayout.astro
// Beschreibung: Das definitive Basis-Layout mit lokaler Font-Einbindung und OTA-Navigation.
// Aktualisiert am: 07.02.2026, 20:15

const { title, description } = Astro.props;

// Sicherer Import des Icons für die Kopfzeile
import headerAvatar from '../assets/header-avatar.jpg';
---

<!DOCTYPE html>
<html lang="de">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <meta name="description" content={description || "Thomas Peter Küper – Autor, Weltenbauer und Philosoph. Erforschung der Omnizedenz und des AVI-Modells."} />
  <title>{title ? `${title} | T.P. KÜPER` : "T.P. KÜPER — Autor & Philosoph"}</title>
  
  <style is:inline>
    /* LOKALE FONT-DEFINITIONEN (DSGVO-KONFORM) */
    
    /* Crimson Text - Für Logos und elegante Überschriften */
    @font-face {
      font-family: 'Crimson Text';
      src: url('/fonts/crimson-text-v19-latin-regular.woff2') format('woff2');
      font-weight: 400;
      font-style: normal;
      font-display: swap;
    }
    @font-face {
      font-family: 'Crimson Text';
      src: url('/fonts/crimson-text-v19-latin-600.woff2') format('woff2');
      font-weight: 600;
      font-style: normal;
      font-display: swap;
    }

    /* Lora - Für den Fließtext */
    @font-face {
      font-family: 'Lora';
      src: url('/fonts/lora-v37-latin-regular.woff2') format('woff2');
      font-weight: 400;
      font-style: normal;
      font-display: swap;
    }

    /* Lato - Für die Navigation und UI-Elemente */
    @font-face {
      font-family: 'Lato';
      src: url('/fonts/lato-v25-latin-regular.woff2') format('woff2');
      font-weight: 400;
      font-style: normal;
      font-display: swap;
    }
    @font-face {
      font-family: 'Lato';
      src: url('/fonts/lato-v25-latin-700.woff2') format('woff2');
      font-weight: 700;
      font-style: normal;
      font-display: swap;
    }

    :root {
      --gold: #c9a961;
      --gold-light: #e5dcc8;
      --brand-blue: #2C4E7A;
      --dark: #121416;
      --text: #1a1a1a;
      --text-muted: #64748b;
      --border: #f1f1f1;
      --bg-soft: #faf9f6;
      --max-width: 1150px;
    }

    * { box-sizing: border-box; margin: 0; padding: 0; }
    
    html, body {
      height: 100%;
      background-color: #ffffff;
      color: var(--text);
      font-family: 'Lato', sans-serif;
      line-height: 1.7;
      -webkit-font-smoothing: antialiased;
    }

    /* Typografie-Zuweisung */
    h1, h2, h3, .logo-name { font-family: 'Crimson Text', serif; font-weight: 400; }
    p, article, section { font-family: 'Lora', serif; }

    .container { max-width: var(--max-width); margin: 0 auto; padding: 0 2rem; }

    /* SITE HEADER */
    .site-header {
      background: rgba(255, 255, 255, 0.98);
      border-bottom: 1px solid var(--border);
      position: sticky;
      top: 0;
      z-index: 1000;
      height: 100px;
      display: flex;
      align-items: center;
    }

    .nav-inner { display: flex; justify-content: space-between; align-items: center; width: 100%; }

    .brand-logo { display: flex; align-items: center; gap: 1.2rem; text-decoration: none; color: var(--text); }

    .header-avatar {
      width: 48px;
      height: 48px;
      border-radius: 50%;
      object-fit: cover;
      border: 1px solid var(--gold-light);
    }

    .logo-name {
      font-size: 1.6rem;
      letter-spacing: 0.35em;
      text-transform: uppercase;
    }

    /* NAVIGATIONSMENÜ */
    .nav-menu { display: flex; gap: 2.2rem; align-items: center; }

    .nav-link {
      text-decoration: none;
      color: var(--text);
      font-size: 0.65rem;
      font-weight: 700;
      text-transform: uppercase;
      letter-spacing: 0.25em;
      position: relative;
      padding: 0.5rem 0;
    }

    .nav-link::after {
      content: ''; position: absolute; bottom: 0; left: 0; width: 0; height: 1px;
      background-color: var(--gold); transition: width 0.3s ease;
    }

    .nav-link:hover { color: var(--gold); }
    .nav-link:hover::after { width: 100%; }

    main { min-height: calc(100vh - 100px); }

    /* FOOTER */
    .site-footer {
      padding: 10rem 0 5rem;
      background: var(--dark);
      color: #94a3b8;
      text-align: center;
    }

    .footer-title { font-size: 1.8rem; color: #ffffff; margin-bottom: 1rem; letter-spacing: 3px; text-transform: uppercase; }
    .footer-divider { width: 40px; height: 1px; background: var(--gold); margin: 2rem auto; }

    .copyright { font-size: 0.65rem; text-transform: uppercase; letter-spacing: 3px; opacity: 0.5; }

    @media (max-width: 900px) {
      .nav-menu { display: none; }
      .logo-name { font-size: 1.1rem; }
    }
  </style>
</head>
<body>

  <header class="site-header">
    <nav class="container nav-inner">
      <a href="/" class="brand-logo">
        <img src={headerAvatar.src} alt="T.P. Küper Avatar" class="header-avatar" />
        <span class="logo-name">T.P. KÜPER</span>
      </a>
      
      <div class="nav-menu">
        <a href="/romane" class="nav-link">Romane</a>
        <a href="/universen" class="nav-link">Universen</a>
        <a href="/sachbuecher" class="nav-link">Sachbücher</a>
        <a href="/philosophie" class="nav-link">Philosophie</a>
        <a href="/ueber-mich" class="nav-link">Über mich</a>
        <a href="/overtime-archive" class="nav-link">OTA</a>
      </div>
    </nav>
  </header>

  <main>
    <slot />
  </main>

  <footer class="site-footer">
    <div class="container footer-content">
      <h4 class="footer-title">Thomas Peter Küper</h4>
      <div class="footer-divider"></div>
      <div style="margin-bottom: 4rem; display: flex; justify-content: center; gap: 2rem; font-size: 0.7rem; text-transform: uppercase; letter-spacing: 2px;">
        <a href="mailto:mail@thomas-kueper.de" style="color: inherit; text-decoration: none;">Kontakt</a>
        <a href="/impressum" style="color: inherit; text-decoration: none;">Impressum</a>
        <a href="/datenschutz" style="color: inherit; text-decoration: none;">Datenschutz</a>
      </div>
      <p class="copyright">
        &copy; {new Date().getFullYear()} — Alle Rechte vorbehalten. <br/>
        Konstruktion von Welten & Sinn.
      </p>
    </div>
  </footer>

</body>
</html>