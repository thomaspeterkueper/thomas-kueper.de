---
// Dateipfad: src/layouts/BaseLayout.astro
// Beschreibung: Basis-Layout mit lokaler Font-Einbindung, OTA-Navigation und Mobile-Hamburger-Menü.
// Aktualisiert am: 08.02.2026

const { title, description } = Astro.props;

import headerAvatar from '../assets/header-avatar.jpg';
---

<!DOCTYPE html>
<html lang="de">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <meta name="description" content={description || "Thomas Peter Küper – Autor, Weltenbauer und Philosoph. Erforschung der Omnizedenz und des AVI-Modells."} />
  <title>{title ? `${title} | Thomas Peter Küper` : "Thomas Peter Küper — Autor & Philosoph"}</title>
  
  <style is:inline>
    /* LOKALE FONT-DEFINITIONEN (DSGVO-KONFORM) */
    @font-face {
      font-family: 'Crimson Text';
      src: url('/fonts/crimson-text-v19-latin-regular.woff2') format('woff2');
      font-weight: 400; font-style: normal; font-display: swap;
    }
    @font-face {
      font-family: 'Crimson Text';
      src: url('/fonts/crimson-text-v19-latin-600.woff2') format('woff2');
      font-weight: 600; font-style: normal; font-display: swap;
    }
    @font-face {
      font-family: 'Lora';
      src: url('/fonts/lora-v37-latin-regular.woff2') format('woff2');
      font-weight: 400; font-style: normal; font-display: swap;
    }
    @font-face {
      font-family: 'Lato';
      src: url('/fonts/lato-v25-latin-regular.woff2') format('woff2');
      font-weight: 400; font-style: normal; font-display: swap;
    }
    @font-face {
      font-family: 'Lato';
      src: url('/fonts/lato-v25-latin-700.woff2') format('woff2');
      font-weight: 700; font-style: normal; font-display: swap;
    }

    :root {
      /* Primäre Design-Tokens */
      --gold: #c9a961;
      --gold-light: #e5dcc8;
      --brand-blue: #2C4E7A;
      --dark: #121416;
      --text: #1a1a1a;
      --text-muted: #64748b;
      --border: #f1f1f1;
      --bg-soft: #faf9f6;
      --max-width: 1150px;

      /* Kompatibilität: Aliase für ältere Philosophie-Seiten */
      --color-gold: #c9a961;
      --color-petrol: #4a9b9b;
      --color-petrol-light: rgba(74, 155, 155, 0.08);
      --color-border: #f1f1f1;
      --color-text: #1a1a1a;
      --color-text-light: #64748b;
      --space-xs: 0.5rem;
      --space-sm: 1rem;
      --space-md: 2rem;
      --space-lg: 4rem;
      --space-xl: 6rem;
    }

    * { box-sizing: border-box; margin: 0; padding: 0; }
    
    html, body {
      height: 100%;
      background-color: #ffffff;
      color: var(--text);
      font-family: 'Lato', sans-serif;
      line-height: 1.7;
      -webkit-font-smoothing: antialiased;
    }

    h1, h2, h3, .logo-name { font-family: 'Crimson Text', serif; font-weight: 400; }
    p, article, section { font-family: 'Lora', serif; }

    .container { max-width: var(--max-width); margin: 0 auto; padding: 0 2rem; }

    /* ===== SITE HEADER ===== */
    .site-header {
      background: rgba(255, 255, 255, 0.98);
      border-bottom: 1px solid var(--border);
      position: fixed;
      top: 0;
      left: 0;
      right: 0;
      z-index: 1000;
      height: 100px;
      display: flex;
      align-items: center;
    }

    .nav-inner { display: flex; justify-content: space-between; align-items: center; width: 100%; }

    .brand-logo { display: flex; align-items: center; gap: 1.2rem; text-decoration: none; color: var(--text); }

    .header-avatar {
      width: 48px; height: 48px;
      border-radius: 50%; object-fit: cover;
      border: 1px solid var(--gold-light);
    }

    .logo-name {
      font-size: 1.4rem;
      letter-spacing: 0.15em;
      text-transform: uppercase;
    }

    /* ===== DESKTOP NAVIGATION ===== */
    .nav-menu { display: flex; gap: 2.2rem; align-items: center; }

    .nav-link {
      text-decoration: none; color: var(--text);
      font-size: 0.65rem; font-weight: 700;
      text-transform: uppercase; letter-spacing: 0.25em;
      position: relative; padding: 0.5rem 0;
    }

    .nav-link::after {
      content: ''; position: absolute; bottom: 0; left: 0; width: 0; height: 1px;
      background-color: var(--gold); transition: width 0.3s ease;
    }

    .nav-link:hover { color: var(--gold); }
    .nav-link:hover::after { width: 100%; }

    /* ===== HAMBURGER BUTTON ===== */
    .hamburger {
      display: none;
      background: none; border: none; cursor: pointer;
      width: 44px; height: 44px;
      position: relative; z-index: 1100;
      -webkit-tap-highlight-color: transparent;
    }

    .hamburger-line {
      display: block;
      width: 24px; height: 1.5px;
      background: var(--text);
      position: absolute; left: 10px;
      transition: transform 0.35s cubic-bezier(0.77, 0, 0.175, 1),
                  opacity 0.25s ease;
    }

    .hamburger-line:nth-child(1) { top: 14px; }
    .hamburger-line:nth-child(2) { top: 21px; }
    .hamburger-line:nth-child(3) { top: 28px; }

    /* Hamburger → X Animation */
    .hamburger.is-active .hamburger-line:nth-child(1) {
      top: 21px; transform: rotate(45deg);
    }
    .hamburger.is-active .hamburger-line:nth-child(2) {
      opacity: 0;
    }
    .hamburger.is-active .hamburger-line:nth-child(3) {
      top: 21px; transform: rotate(-45deg);
    }

    /* ===== MOBILE OVERLAY ===== */
    .mobile-overlay {
      display: none;
      position: fixed;
      inset: 0;
      background: rgba(255, 255, 255, 0.98);
      backdrop-filter: blur(20px);
      -webkit-backdrop-filter: blur(20px);
      z-index: 1050;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      gap: 0;
      opacity: 0;
      transition: opacity 0.4s ease;
    }

    .mobile-overlay.is-open {
      display: flex;
      opacity: 1;
    }

    .mobile-nav-link {
      text-decoration: none;
      color: var(--text);
      font-family: 'Crimson Text', serif;
      font-size: 2.2rem;
      font-weight: 400;
      letter-spacing: 0.08em;
      padding: 0.8rem 0;
      position: relative;
      opacity: 0;
      transform: translateY(20px);
      transition: opacity 0.4s ease, transform 0.4s ease, color 0.3s ease;
    }

    .mobile-overlay.is-open .mobile-nav-link {
      opacity: 1;
      transform: translateY(0);
    }

    /* Staggered entrance */
    .mobile-overlay.is-open .mobile-nav-link:nth-child(1) { transition-delay: 0.08s; }
    .mobile-overlay.is-open .mobile-nav-link:nth-child(2) { transition-delay: 0.14s; }
    .mobile-overlay.is-open .mobile-nav-link:nth-child(3) { transition-delay: 0.20s; }
    .mobile-overlay.is-open .mobile-nav-link:nth-child(4) { transition-delay: 0.26s; }
    .mobile-overlay.is-open .mobile-nav-link:nth-child(5) { transition-delay: 0.32s; }
    .mobile-overlay.is-open .mobile-nav-link:nth-child(6) { transition-delay: 0.38s; }

    .mobile-nav-link::after {
      content: '';
      position: absolute;
      bottom: 0.4rem; left: 50%; transform: translateX(-50%);
      width: 0; height: 1px;
      background: var(--gold);
      transition: width 0.3s ease;
    }

    .mobile-nav-link:hover { color: var(--gold); }
    .mobile-nav-link:hover::after { width: 60%; }

    .mobile-nav-divider {
      width: 30px; height: 1px;
      background: var(--gold-light);
      margin: 2rem 0;
      opacity: 0;
      transition: opacity 0.5s ease 0.45s;
    }

    .mobile-overlay.is-open .mobile-nav-divider { opacity: 1; }

    main { min-height: calc(100vh - 100px); padding-top: 100px; }

    /* ===== FOOTER ===== */
    .site-footer {
      padding: 10rem 0 5rem;
      background: var(--dark);
      color: #94a3b8;
      text-align: center;
    }

    .footer-title { font-size: 1.8rem; color: #ffffff; margin-bottom: 1rem; letter-spacing: 3px; text-transform: uppercase; }
    .footer-divider { width: 40px; height: 1px; background: var(--gold); margin: 2rem auto; }

    .footer-links {
      margin-bottom: 4rem;
      display: flex; justify-content: center; gap: 2rem;
      font-size: 0.7rem; text-transform: uppercase; letter-spacing: 2px;
    }

    .footer-links a { color: inherit; text-decoration: none; transition: color 0.3s; }
    .footer-links a:hover { color: var(--gold); }

    .copyright { font-size: 0.65rem; text-transform: uppercase; letter-spacing: 3px; opacity: 0.5; }

    /* ===== RESPONSIVE ===== */
    @media (max-width: 900px) {
      .nav-menu { display: none; }
      .hamburger { display: block; }
      .logo-name { font-size: 0.9rem; letter-spacing: 0.1em; }
    }
  </style>
</head>
<body>

  <header class="site-header">
    <nav class="container nav-inner">
      <a href="/" class="brand-logo">
        <img src={headerAvatar.src} alt="Thomas Peter Küper Avatar" class="header-avatar" />
        <span class="logo-name">Thomas Peter Küper</span>
      </a>
      
      <div class="nav-menu">
        <a href="/romane" class="nav-link">Romane</a>
        <a href="/universen" class="nav-link">Universen</a>
        <a href="/sachbuecher" class="nav-link">Sachbücher</a>
        <a href="/philosophie" class="nav-link">Philosophie</a>
        <a href="/ueber-mich" class="nav-link">Über mich</a>
        <a href="/overtime-archive" class="nav-link">OTA</a>
      </div>

      <button class="hamburger" id="hamburger" aria-label="Menü öffnen" aria-expanded="false">
        <span class="hamburger-line"></span>
        <span class="hamburger-line"></span>
        <span class="hamburger-line"></span>
      </button>
    </nav>
  </header>

  <!-- Mobile Fullscreen Overlay -->
  <div class="mobile-overlay" id="mobileOverlay">
    <a href="/romane" class="mobile-nav-link">Romane</a>
    <a href="/universen" class="mobile-nav-link">Universen</a>
    <a href="/sachbuecher" class="mobile-nav-link">Sachbücher</a>
    <a href="/philosophie" class="mobile-nav-link">Philosophie</a>
    <a href="/ueber-mich" class="mobile-nav-link">Über mich</a>
    <a href="/overtime-archive" class="mobile-nav-link">OTA</a>
    <div class="mobile-nav-divider"></div>
  </div>

  <main>
    <slot />
  </main>

  <footer class="site-footer">
    <div class="container footer-content">
      <h4 class="footer-title">Thomas Peter Küper</h4>
      <div class="footer-divider"></div>
      <div class="footer-links">
        <a href="mailto:mail@thomas-kueper.de">Kontakt</a>
        <a href="/impressum">Impressum</a>
        <a href="/datenschutz">Datenschutz</a>
      </div>
      <p class="copyright">
        &copy; {new Date().getFullYear()} — Alle Rechte vorbehalten. <br/>
        Konstruktion von Welten & Sinn.
      </p>
    </div>
  </footer>

  <script is:inline>
    const hamburger = document.getElementById('hamburger');
    const overlay = document.getElementById('mobileOverlay');
    
    hamburger.addEventListener('click', () => {
      const isOpen = hamburger.classList.toggle('is-active');
      overlay.classList.toggle('is-open');
      hamburger.setAttribute('aria-expanded', isOpen);
      document.body.style.overflow = isOpen ? 'hidden' : '';
    });

    // Schließen bei Link-Klick
    overlay.querySelectorAll('.mobile-nav-link').forEach(link => {
      link.addEventListener('click', () => {
        hamburger.classList.remove('is-active');
        overlay.classList.remove('is-open');
        hamburger.setAttribute('aria-expanded', 'false');
        document.body.style.overflow = '';
      });
    });

    // Schließen bei Escape
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape' && overlay.classList.contains('is-open')) {
        hamburger.classList.remove('is-active');
        overlay.classList.remove('is-open');
        hamburger.setAttribute('aria-expanded', 'false');
        document.body.style.overflow = '';
      }
    });
  </script>

</body>
</html>
